         <font>
            <Font name="Bauhaus 93" size="18.0" />
         </font>
      </Label>
      <Label layoutX="288.0" layoutY="237.0" prefHeight="74.0" prefWidth="78.0" text="Yes - for another nation" textAlignment="CENTER" textFill="WHITE" wrapText="true">
         <font>
            <Font name="Bauhaus 93" size="18.0" />
         </font>
      </Label>
      <Label layoutX="468.0" layoutY="263.0" onMouseClicked="#onNoSwordSchool" text="No" textFill="WHITE">
         <font>
            <Font name="Bauhaus 93" size="18.0" />
         </font>
      </Label>
      <Button fx:id="continueButton" layoutX="521.0" layoutY="361.0" mnemonicParsing="false" onAction="#onContinue" text="Continue" />
      <Label fx:id="swordSchoolDescription" layoutX="185.0" layoutY="138.0" text="Label" visible="false" />
   </children>
</AnchorPane>
