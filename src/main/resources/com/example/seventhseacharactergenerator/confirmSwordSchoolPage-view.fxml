<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.seventhseacharactergenerator.Controllers.confirmSwordController">
   <children>
      <Label layoutX="166.0" layoutY="50.0" prefHeight="81.0" prefWidth="404.0" text="Do you want to join a swordsman school?" textAlignment="CENTER" textFill="#ae8600" wrapText="true">
         <font>
            <Font name="Bauhaus 93" size="31.0" />
         </font>
      </Label>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="14.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@swordBadge.png" />
         </image>
      </ImageView>
      <Rectangle fx:id="myNationRectangle" arcHeight="5.0" arcWidth="5.0" fill="#ae8600" height="96.0" layoutX="122.0" layoutY="226.0" onMouseClicked="#onMyNation" stroke="BLACK" strokeType="INSIDE" width="104.0" />
      <Rectangle fx:id="otherNation" arcHeight="5.0" arcWidth="5.0" fill="#ae8600" height="96.0" layoutX="275.0" layoutY="225.0" onMouseClicked="#onClick" stroke="BLACK" strokeType="INSIDE" width="104.0" />
      <Rectangle fx:id="noSwordSchoolRectangle" arcHeight="5.0" arcWidth="5.0" fill="#ae8600" height="96.0" layoutX="426.0" layoutY="225.0" onMouseClicked="#onNoSwordSchool" stroke="BLACK" strokeType="INSIDE" width="104.0" />
